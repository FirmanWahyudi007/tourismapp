<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Kategori</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < destination.length; i++){ %>
        <tr>
            <td><%= i+1 %></td>
            <td><%= destination[i].name %></td>
            <td><%= destination[i].address %></td>
            <td><%= destination[i].category?.name ?? '-' %></td>
            <td>
                <form action="/destination/delete/<%= destination[i]._id %>?_method=DELETE" method="POST">
                    <a href="/destination/edit/<%= destination[i]._id %> " class="btn btn-info btn-sm"><i
                            class="fas fa-pencil-alt"></i>
                        Ubah</a>
                    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Hapus</button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>